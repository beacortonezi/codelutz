<!DOCTYPE HTML>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="images/favicon.ico" />

    <title>LUTZ</title>

    <script src="js/jquery-3.3.1.js"></script>
    <link href="css/style.css" rel="stylesheet">
    <link href="css/noticia.css" rel="stylesheet">
  </head>

  <body>
    <header>
      
      <div class="cabecalho">

        <div class="menu-icon">
          <a href="#" id="btn">
            <div id="linha-1"></div>
            <div id="linha-2"></div>
            <div id="linha-3"></div>
          </a>
        </div>

        <div class="logo">
          <img src="images/logo.svg">
        </div> 

        <div class="login">
          <a href="login.ejs">
            <img src="images/login.png">
          </a>
        </div>  

      </div>

      <nav class ="hidden">
        <a href="#" id="close"> X </a>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="#">Sobre</a></li>
            <li><a href="noticias">Administrador</a></li>
          </ul>
      </nav>

    </header>

    <main>

      <div class="form_buscar">
        <form action="/busca" method="post">
          <div class="buscar">
            <input type="text" class="form_buscar_input" placeholder="O que deseja encontrar?" name="pesquisa"></input>
            <button type="submit" class="form_buscar_btn" value="Buscar">
              <img class="form_buscar_img" src="images/search.png">
            </button>
          </div>
        </form>
      </div>

	  <script type="text/javascript">
		function Confirma(param){
			if(confirm("Confirma a exclusão da notícia?")){
				location.href = "excluir?id_noticia=" + param;
			}
		}
	  </script>

    <div class="update_btn_div">
      <a href="editar?id_noticia=<%=noticia[0].id_noticia%>" class="update_btn">
        <img src="images/update.png">
        <label class="update_btn_label">Editar notícia</label>
      </a>
    </div>

    <div class="excluir_btn_div">
      <a href="#" class="excluir_btn" onclick="Confirma(<%=noticia[0].id_noticia%>)">
        <img src="images/delete.png">
        <label class="excluir_btn_label">Excluir notícia</label>
      </a>
    </div>

    <div class="container"> 
      <div class="noticia_display">
          <h1 class="noticia_titulo"><%=noticia[0].titulo%></h1>
          <p class="noticia_descricao">
            <%=noticia[0].descricao%>
          </p>
          <p class="noticia_data">Em <%=noticia[0].data_criacao%></p>
          <p class="noticia_autor">Por <%=noticia[0].autor%></p>

          <div class="noticia_display_img">
          	<img class="noticia_display_img" src="#">
        	</div> 

          <p class="noticia_texto">
    				<%=noticia[0].noticia%>
    			</p>
      </div>
    </div>

    </main>
    
    <script type="text/javascript" src="js/menu.js"></script>
  </body>
</html>