<!DOCTYPE HTML>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="images/favicon.ico" />

    <title>LUTZ</title>

    <script src="js/jquery-3.3.1.js"></script>
    <link href="css/style.css" rel="stylesheet">
    <link href="css/index.css" rel="stylesheet">
  </head>

  <body>
    <header>
      
      <div class="cabecalho">

        <div class="menu-icon">
          <a href="#" id="btn">
            <div id="linha-1"></div>
            <div id="linha-2"></div>
            <div id="linha-3"></div>
          </a>
        </div>

        <div class="logo">
          <img src="images/logo.png">
        </div> 

        <div class="login">
          <a href="login.ejs">
            <img src="images/login.png">
          </a>
        </div>  

      </div>

      <nav class ="hidden">
        <a href="#" id="close"> X </a>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="#">Sobre</a></li>
            <li><a href="noticias">Administrador</a></li>
          </ul>
      </nav>

    </header>

    <main>

      <div class="form_buscar">
        <form action="/busca" method="post">
          <div class="buscar">
            <input type="text" class="form_buscar_input" placeholder="O que deseja encontrar?" name="pesquisa"></input>
            <button type="submit" class="form_buscar_btn" value="Buscar">
              <img class="form_buscar_img" src="images/search.png">
            </button>
          </div>
        </form>
      </div>

      <div class="container"> 
        <div class="row">
          <a href="noticia?id_noticia=<%=noticias[0].id_noticia%>">
            <div class="noticia_wrapper" href="noticia?id_noticia = <%=noticias[0].id_noticia%>">
              <div class="noticia_wrapper_img">
                <img class="noticia_wrapper_img" src="images/noticia.png">
              </div> 

              <div class="noticia_wrapper_brush">
                <h1 class="noticia_titulo"><%=noticias[0].titulo%></h1>
                <p class="noticia_descricao">
                  <%=noticias[0].descricao%>
                </p>
                <p class="noticia_data">Em <%=noticias[0].data_criacao%></p>
                <p class="noticia_autor">Por <%=noticias[0].autor%></p>
                <img src="images/bg_brush.svg">
              </div>
            </div>
          </a>

          <a href="noticia?id_noticia=<%=noticias[1].id_noticia%>">
            <div class="noticia_wrapper" href="noticia?id_noticia = <%=noticias[1].id_noticia%>">
              <div class="noticia_wrapper_img">
                <img class="noticia_wrapper_img" src="images/noticia.png">
              </div> 

              <div class="noticia_wrapper_texts">
                <h1 class="noticia_titulo"><%=noticias[1].titulo%></h1>
                <p class="noticia_descricao">
                  <%=noticias[1].descricao%>
                </p>
                <p class="noticia_data">Em <%=noticias[1].data_criacao%></p>
                <p class="noticia_autor">Por <%=noticias[1].autor%></p>
              </div>
            </div>
          </a>

          <a href="noticia?id_noticia=<%=noticias[2].id_noticia%>">
            <div class="noticia_wrapper" href="noticia?id_noticia = <%=noticias[2].id_noticia%>">
              <div class="noticia_wrapper_img">
                <img class="noticia_wrapper_img" src="images/noticia.png">
              </div> 

              <div class="noticia_wrapper_texts">
                <h1 class="noticia_titulo"><%=noticias[2].titulo%></h1>
                <p class="noticia_descricao">
                  <%=noticias[2].descricao%>
                </p>
                <p class="noticia_data">Em <%=noticias[2].data_criacao%></p>
                <p class="noticia_autor">Por <%=noticias[2].autor%></p>
              </div>
            </div>
          </a>
        </div>

        <div class="row">
        <% for (var i=3; i<noticias.length; i++) { %>
          <a href="noticia?id_noticia=<%=noticias[i].id_noticia%>">
            <div class="noticia_wrapper" href="noticia?id_noticia = <%=noticias[i].id_noticia%>">
              <div class="noticia_wrapper_img">
                <img class="noticia_wrapper_img" src="images/noticia.png">
              </div> 

              <div class="noticia_wrapper_texts">
                <h1 class="noticia_titulo"><%=noticias[i].titulo%></h1>
                <p class="noticia_descricao">
                  <%=noticias[i].descricao%>
                </p>
                <p class="noticia_data">Em <%=noticias[i].data_criacao%></p>
                <p class="noticia_autor">Por <%=noticias[i].autor%></p>
              </div>
            </div>
          </a>
        <% } %>
        </div>

        <button type="button" class="ver_tudo_btn">
          <a href="noticias">Ver tudo</a>
        </button>
      </div>

    </main>
    
    <script type="text/javascript" src="js/menu.js"></script>
  </body>
</html>