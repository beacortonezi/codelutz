<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>LUTZ</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" class="logo"/>
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="index.html">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
			<% if (validacao.length > 0) { %>
			<div class="row">
				<div class="col-md-12">
					<div class="alert alert-danger">
						<strong>Atenção!</strong>
						<ul>
							<% for (var i=0; i<validacao.length; i++) { %>
								<li> <%=validacao[i].msg%> </li>
							<% } %>
						</ul>
					</div>
				</div>
			</div>
			<% } %>
			
	    	<div class="row">
	    		<div class="col-md-12">
	    			<label>Editar notícia</label>
	    			<form action="/editar" method="post">
	    				<div class="form-group">
							<label for="titulo">ID:</label>
							<input type="text" class="form-control" readonly value="<%=noticia[0].id_noticia%>" id="id_noticia" name="id_noticia">
						</div>

						<div class="form-group">
							<label for="titulo">Título:</label>
							<input type="text" class="form-control" value="<%=noticia[0].titulo%>" id="titulo" name="titulo">
						</div>

						<div class="form-group">
							<label for="pwd">Descrição:</label>
							<textarea class="form-control" id="descricao" name="descricao"><%=noticia[0].descricao%></textarea>
						</div>
						
						<div class="form-group">
							<label for="pwd">Autor:</label>
							<input type="text" class="form-control" value="<%=noticia[0].autor%>" id="autor" name="autor">
						</div>

						<div class="form-group">
							<label for="pwd">Data:</label>
							<input type="date" class="form-control" value="<%=noticia[0].data_criacao%>" id="data_criacao" name="data_criacao">
						</div>

						<div class="form-group">
							<label for="pwd">Notícia:</label>
							<textarea class="form-control" id="noticia" name="noticia"><%=noticia[0].noticia%></textarea>
						</div>


						<button type="submit" class="btn btn-default">Editar</button>
						</form>
		    	</div>
	    	</div>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>